{% extends 'base.html.twig' %}

{% block title %}
    {% if mode == 'create' %}Nowy kontrahent{% else %}Edycja kontrahenta{% endif %}
{% endblock %}

{% block body %}
    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="mb-4">
                {% if mode == 'create' %}Dodaj kontrahenta{% else %}Edytuj kontrahenta{% endif %}
            </h4>

            <form method="post">
                <div class="mb-3">
                    <label class="form-label">Nazwa kontrahenta</label>
                    <input type="text" name="name" class="form-control"
                           value="{{ customer.name ?? '' }}" required>
                </div>

                <div class="d-flex justify-content-between">
                    <a href="{{ path('customer_list') }}" class="btn btn-secondary">Powr√≥t</a>
                    <button type="submit" class="btn btn-primary">Zapisz</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
