{% extends 'base.html.twig' %}

{% block title %}
    {% if mode == 'create' %}
        Nowa forma płatności
    {% else %}
        Edycja formy płatności
    {% endif %}
{% endblock %}

{% block body %}
    <h1>
        {% if mode == 'create' %}
            Nowa forma płatności
        {% else %}
            Edycja formy płatności
        {% endif %}
    </h1>

    <form
        method="post"
        action="{% if mode == 'create' %}
                    {{ path('payment_method_new') }}
                {% else %}
                    {{ path('payment_method_edit', {id: paymentMethod.id}) }}
                {% endif %}"
    >
        <div class="mb-3">
            <label for="name" class="form-label">Nazwa</label>
            <input
                type="text"
                id="name"
                name="name"
                class="form-control"
                value="{{ paymentMethod.name }}"
                required
            >
        </div>

        <div class="form-check mb-3">
            <input
                class="form-check-input"
                type="checkbox"
                id="isDefault"
                name="isDefault"
                value="1"
                {% if paymentMethod is defined and paymentMethod.isDefault %}checked{% endif %}
            >
            <label class="form-check-label" for="isDefault">
                Ustaw jako domyślną formę płatności
            </label>
        </div>

        <button type="submit" class="btn btn-primary">
            Zapisz
        </button>

        <a href="{{ path('payment_method_list') }}" class="btn btn-secondary">
            Powrót
        </a>
    </form>
{% endblock %}
